<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/withouttext"
    tools:context="com.nickteck.colormecrazy.activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@mipmap/crazaylogo" />

            <com.nickteck.evaporatelibrary.EvaporateTextView
                android:id="@+id/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="ARAVINDRAJ"
                android:textSize="45sp"/>

            <com.nickteck.evaporatelibrary.EvaporateTextView
                android:id="@+id/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="ARAVIND"
                android:textSize="55sp"/>

            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <com.nickteck.evaporatelibrary.EvaporateTextView
                android:id="@+id/text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="salon"
                android:textSize="20sp"/>
            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
